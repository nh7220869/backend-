import app, { initializeServices } from './src/app.js';
import dotenv from 'dotenv';
import path from 'path';
import { fileURLToPath } from 'url';

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);

// Load .env from project root
dotenv.config({ path: path.join(__dirname, '..', '.env') });

const PORT = process.env.CENTRAL_BACKEND_PORT || 3001;

// Initialize services once
let servicesInitialized = false;

const initOnce = async () => {
  if (!servicesInitialized) {
    console.log('ğŸš€ Initializing Central Backend Services...');
    await initializeServices();
    servicesInitialized = true;
    console.log('âœ… Services initialized successfully');
  }
};

// For local development: start the server
if (process.env.NODE_ENV !== 'production') {
  (async () => {
    try {
      await initOnce();

      app.listen(PORT, () => {
        console.log('='.repeat(50));
        console.log('âœ… Central Backend Server Started (Local Dev)');
        console.log('='.repeat(50));
        console.log(`ğŸŒ Server running on: http://localhost:${PORT}`);
        console.log('='.repeat(50));
        console.log('ğŸ“‹ Available endpoints:');
        console.log('   - POST /api/auth/sign-up/email');
        console.log('   - POST /api/auth/sign-in/email');
        console.log('   - POST /api/auth/sign-out');
        console.log('   - GET  /api/auth/session');
        console.log('   - POST /api/gemini/translate');
        console.log('   - POST /api/personalize');
        console.log('   - POST /chat');
        console.log('   - GET  /health');
        console.log('='.repeat(50));
      });
    } catch (error) {
      console.error('âŒ Failed to start server:', error);
      process.exit(1);
    }
  })();
}

// For Vercel serverless: export handler
export default async (req, res) => {
  try {
    await initOnce();
    return app(req, res);
  } catch (error) {
    console.error('âŒ Serverless function error:', error);
    res.status(500).json({ error: 'Internal server error', details: error.message });
  }
};
